@model SchoolManageSys.Models.TeacherModel

<main class="main" id="main">
    <!-- Add/Edit Teacher Form -->
    <div class="container mt-5">
        <h2 class="mb-4">Add/Edit Teacher</h2>
        <form method="post" asp-action="Save" class="form-group">
            <input type="hidden" asp-for="TeacherId" />

            <!-- TeacherName -->
            <div class="mb-3">
                <label for="TeacherName" class="form-label">TeacherName</label>
                <input asp-for="TeacherName" id="TeacherName" class="form-control" placeholder="Enter TeacherName" />
            </div>

            <!-- Email -->
            <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <input asp-for="Email" id="Email" class="form-control" placeholder="Enter Email" />
            </div>

            <!-- DateOfBirth -->
            <div class="mb-3">
                <label for="DateOfBirth" class="form-label">Date Of Birth</label>
                <input asp-for="DateOfBirth" id="DateOfBirth" class="form-control" placeholder="Select your date of birth" type="date" />
            </div>


            <!-- Mobile Number -->
            <div class="mb-3">
                <label for="MobileNo" class="form-label">Mobile Number</label>
                <input asp-for="MobileNo" id="MobileNo" class="form-control" placeholder="Enter Mobile Number" />
            </div>

            <!-- School Dropdown -->
            <div class="mb-3">
                <label for="SchoolId" class="form-label">School</label>
                <select asp-for="SchoolId" id="SchoolId" class="form-select"
                        asp-items="@(new SelectList(ViewBag.SchoolList, "SchoolId", "SchoolName"))">
                    <option value="">-- Select School --</option>
                </select>
                <span class="text-danger">@Html.ValidationMessageFor(model => model.SchoolId)</span>
            </div>

            <!-- Salary -->
            <div class="mb-3">
                <label for="Salary" class="form-label">Salary</label>
                <input asp-for="Salary" id="Salary" class="form-control" placeholder="Enter Salary" />
            </div>

            <!-- ExperienceYears -->
            <div class="mb-3">
                <label for="ExperienceYears" class="form-label">ExperienceYears</label>
                <input asp-for="ExperienceYears" id="ExperienceYears" class="form-control" placeholder="Enter ExperienceYears" />
            </div>

            <!-- Gender -->
            <div class="mb-3">
                <label for="Gender" class="form-label">Gender</label>
                <div>
                    <div class="form-check">
                        <input asp-for="Gender" type="radio" id="Male" value="Male" class="form-check-input" />
                        <label class="form-check-label" for="Male">Male</label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Gender" type="radio" id="Female" value="Female" class="form-check-input" />
                        <label class="form-check-label" for="Female">Female</label>
                    </div>
                </div>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</main>
