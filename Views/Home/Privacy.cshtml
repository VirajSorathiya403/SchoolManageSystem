@using Newtonsoft.Json

@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Ensures sidebar & footer remain unchanged
    var userJson = Context.Session.GetString("UserDetails");
    UserModel loggedInUser = null;

    if (!string.IsNullOrEmpty(userJson))
    {
        loggedInUser = JsonConvert.DeserializeObject<UserModel>(userJson);
    }
}

<style>
    .profile-card {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        border-radius: 12px;
        box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.3s ease-in-out;
    }

    .profile-card:hover {
        transform: scale(1.02);
    }

    .profile-header {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        padding: 30px;
        text-align: center;
        color: white;
    }

    .profile-avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        border: 4px solid white;
        transition: transform 0.3s ease-in-out;
    }

    .profile-avatar:hover {
        transform: scale(1.1);
    }

    .profile-details {
        padding: 20px;
    }

    .info-item {
        padding: 10px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        display: flex;
        justify-content: space-between;
        font-size: 16px;
    }

    .btn-edit {
        margin-top: 20px;
        background: linear-gradient(135deg, #ff416c 0%, #ff4b2b 100%);
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 8px;
        transition: 0.3s ease-in-out;
        color: white;
    }

    .btn-edit:hover {
        background: linear-gradient(135deg, #ff4b2b 0%, #ff416c 100%);
        transform: scale(1.05);
    }
</style>

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card profile-card shadow-lg border-0">
                <div class="profile-header">
                    <img src="https://cdn-icons-png.flaticon.com/512/847/847969.png"
                         class="profile-avatar mb-3" alt="User Avatar">
                    <h3 class="fw-bold">@loggedInUser?.UserName</h3>
                    <p class="text-light">@loggedInUser?.UserRoleName</p>
                </div>

                <div class="profile-details">
                    <div class="info-item">
                        <strong>User ID:</strong>
                        <span>@loggedInUser?.UserId</span>
                    </div>
                    <div class="info-item">
                        <strong>Email:</strong>
                        <span>@loggedInUser?.Email</span>
                    </div>
                    <div class="info-item">
                        <strong>Mobile No:</strong>
                        <span>@loggedInUser?.MobileNo</span>
                    </div>
                    <div class="info-item">
                        <strong>Role:</strong>
                        <span>@loggedInUser?.UserRoleName</span>
                    </div>
                    <div class="info-item">
                        <strong>Contact Person:</strong>
                        <span>@loggedInUser?.ContactPersonName</span>
                    </div>
                </div>

                <div class="text-center pb-4">
                    <a asp-action="Add" asp-controller="User" asp-route-UserID="@loggedInUser?.UserId"
                       class="btn btn-edit">
                        <i class="fas fa-edit"></i> Edit Profile
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
